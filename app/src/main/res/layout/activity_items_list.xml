            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="202dp"
            android:shadowColor="#EF5350"
            android:text="6530"
            android:textAlignment="textEnd"
            android:textColor="#EF5350"
            android:textFontWeight="950"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/search_result_1"
            app:layout_constraintStart_toStartOf="@+id/search_result_1"
            app:layout_constraintTop_toTopOf="@+id/search_result_1" />

        <ImageView
            android:id="@+id/search_result_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"

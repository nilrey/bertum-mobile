            android:background="#A6AEB6"
            android:text="УЦЕНКА: 0"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cntBU"
            app:layout_constraintTop_toBottomOf="@+id/cntNonOrig" />

        <Button
            android:id="@+id/cntAll"
            android:layout_width="106dp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:background="#FFFFFF"
            android:text="ПОКАЗАТЬ ВСЕ"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/cntDiscont"
            app:layout_constraintTop_toBottomOf="@+id/cntNonOrig" />

        <ImageView
            android:id="@+id/search_result_1"

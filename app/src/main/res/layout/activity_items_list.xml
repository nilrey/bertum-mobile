            android:text="4560"
            android:textAlignment="textEnd"
            android:textColor="#EF5350"
            android:textFontWeight="950"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/search_result_3"
            app:layout_constraintStart_toStartOf="@+id/search_result_3"
            app:layout_constraintTop_toTopOf="@+id/search_result_3" />

        <ImageButton
            android:id="@+id/bottomPrices"
            android:layout_width="339dp"
            android:layout_height="53dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_result_3"

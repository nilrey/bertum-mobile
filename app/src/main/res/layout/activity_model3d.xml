<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ico_menu"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_menu" />

    <ImageView
        android:id="@+id/vw_logo_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vw_logo_full" />


    <ImageView
        android:id="@+id/ico_dtp2"
        android:layout_width="53dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toEndOf="@+id/vw_logo_full"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_dtp2" />

    <ImageView
        android:id="@+id/m3d_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/m3d_car_real" />


    <ImageView
        android:id="@+id/m3d_detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="63dp"
        app:layout_constraintStart_toStartOf="@+id/m3d_car"
        app:layout_constraintTop_toTopOf="@+id/m3d_car"
        app:srcCompat="@drawable/m3d_real_detail_1" />

    <ImageView
        android:id="@+id/m3d_detail_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/m3d_car"
        app:layout_constraintTop_toTopOf="@+id/m3d_car"
        app:srcCompat="@drawable/m3d_real_detail_2" />

    <ImageView
        android:id="@+id/imgGallery"
        android:layout_width="206dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m3d_car" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/textBase64"
        android:layout_width="337dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGallery" />


</android.support.constraint.ConstraintLayout>
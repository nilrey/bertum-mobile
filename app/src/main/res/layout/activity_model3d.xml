<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ico_menu" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/vw_logo_full" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                app:srcCompat="@drawable/ico_dtp2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/arrow_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/m3d_arrow_plus" />

                <ImageButton
                    android:id="@+id/arrow_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/m3d_arrow_minus" />

                <ImageButton
                    android:id="@+id/arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/m3d_arrow_left" />

                <ImageButton
                    android:id="@+id/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/m3d_arrow_right" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_m3d_vw6_sed_x033_right_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/m3d_vw6_sed_x033_right_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/m3d_vw6_sed_x033_right_front" />

            <ImageView
                android:id="@+id/m3d_vw6_sed_x033_right_front_wing_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="110dp"
                app:srcCompat="@drawable/m3d_vw6_sed_x033_front_right_rear_right_wing" />

            <ImageView
                android:id="@+id/m3d_vw6_sed_x033_right_front_door_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-146dp"
                android:layout_marginTop="71dp"
                app:srcCompat="@drawable/m3d_vw6_sed_x033_front_right_front_right_door" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_m3d_vw6_sed_x050_right_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:scrollbars="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/m3d_vw6_sed_x050_right_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/m3d_vw6_sed_x050_right_front" />

            <ImageView
                android:id="@+id/m3d_detail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="165dp"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/m3d_vw6_sed_x050_right_front_wing_r" />

            <ImageView
                android:id="@+id/m3d_detail_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-220dp"
                android:layout_marginTop="106dp"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/m3d_vw6_sed_x050_right_front_door_r" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="206dp"
                android:layout_height="65dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_editor_absoluteX="162dp" />

            <TextView
                android:id="@+id/textBase64"
                android:layout_width="337dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgGallery" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
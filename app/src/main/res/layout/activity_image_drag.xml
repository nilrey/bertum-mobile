<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".ImageDragActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <LinearLayout
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/imageView3"
                app:srcCompat="@drawable/ico_menu" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/vw_logo_full" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/imageView3"
                app:srcCompat="@drawable/ico_dtp2" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/area_3dmodel"
                tools:layout_editor_absoluteX="-3dp">

                <ImageButton
                    android:id="@+id/arrow_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:background="@color/colorWhite"
                    app:srcCompat="@drawable/m3d_arrow_plus" />

                <ImageButton
                    android:id="@+id/arrow_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorWhite"
                    app:srcCompat="@drawable/m3d_arrow_minus" />

                <ImageButton
                    android:id="@+id/arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@color/colorWhite"
                    app:srcCompat="@drawable/m3d_arrow_left" />

                <ImageButton
                    android:id="@+id/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@color/colorWhite"
                    app:srcCompat="@drawable/m3d_arrow_right" />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/area_3dmodel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/blockCarRF_x033"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/layoutCarRF_x033"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/m3d_vw6_sed_x033_right_front" />

                    <ImageView
                        android:id="@+id/doorRightFrontRF_x033"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/layoutCarRF_x033"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="106dp"
                        android:layout_marginTop="72dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/m3d_vw6_sed_x033_front_right_front_right_door" />

                    <ImageView
                        android:id="@+id/wingRightFrontRF_x033"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/layoutCarRF_x033"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="110dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/m3d_vw6_sed_x033_front_right_front_right_wing" />

                    <ImageView
                        android:id="@+id/bumperRightFrontRF_x033"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/layoutCarRF_x033"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="161dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/m3d_vw6_sed_x033_front_right_front_bumper" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blockCarRF_x050"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/layoutCarRF_x050"
                        android:layout_width="561dp"
                        android:layout_height="276dp"
                        android:scaleType="center"
                        android:src="@drawable/m3d_vw6_sed_x050_right_front" />

                    <ImageView
                        android:id="@+id/doorRightFrontRF_x050"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/layoutCarRF_x050"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="127dp"
                        android:layout_marginTop="22dp"
                        android:src="@drawable/m3d_vw6_sed_x050_right_front_door_r" />

                    <ImageView
                        android:id="@+id/wingRightFrontRF_x050"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/layoutCarRF_x050"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="206dp"
                        android:layout_marginTop="79dp"
                        android:src="@drawable/m3d_vw6_sed_x050_right_front_wing_r" />

                    <ImageView
                        android:id="@+id/bumperRightFrontRF_x050"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="266dp"
                        android:layout_marginTop="155dp"
                        app:srcCompat="@drawable/m3d_vw6_sed_x050_right_front_bumper_f" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blockCarFF_x033"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/layoutCarFF_x033"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/m3d_vw6_sed_x033_front_front" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blockCarLF_x033"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/layoutCarLF_x033"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/m3d_vw6_sed_x033_left_front" />

                </RelativeLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="TextView"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/bottomPrices"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bottomPrices"
                android:layout_width="339dp"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bottom_prices" />

            <TextView
                android:id="@+id/cntTotalItems"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:layout_marginStart="152dp"
                android:layout_marginTop="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/bottomPrices"
                app:layout_constraintTop_toTopOf="@+id/bottomPrices" />

            <TextView
                android:id="@+id/sumRepairs"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="22dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/bottomPrices"
                app:layout_constraintTop_toTopOf="@+id/bottomPrices" />

            <TextView
                android:id="@+id/sumRepairsWork"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="57dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/bottomPrices"
                app:layout_constraintTop_toTopOf="@+id/bottomPrices" />

            <TextView
                android:id="@+id/respView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>